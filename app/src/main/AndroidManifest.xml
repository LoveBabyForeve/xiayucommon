<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xiayule.xiayucommom">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XiaYuCommom.NoActionBar"
        tools:targetApi="n">

        <activity
            android:name=".MainActivity2"
            android:exported="true"
            android:label="@string/title_activity_main2" />

        <activity
            android:name=".ui.huaweitoast.ToastActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            android:resizeableActivity="true">
            <layout
                android:defaultWidth="600dp"
                android:defaultHeight="500dp"
                android:gravity="top|end"
                android:minimalWidth="300dp"
                android:minmalHeight="450dp" />
        </activity>

        <activity
            android:name=".ui.pileavertview.PileAvertViewActivity"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.picture.PictureSelectorActivity" />

        <activity android:name=".ui.CUrop.CUropActivity" />

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.NoActionBar" />
    </application>

</manifest>